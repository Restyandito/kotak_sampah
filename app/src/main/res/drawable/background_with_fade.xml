<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gambar background -->
    <item>
        <bitmap
            android:src="@drawable/background_menu"
        android:gravity="fill"/>
    </item>

    <!-- Layer transparan dengan efek fade hijau -->
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="0dp">
        <shape>
            <solid android:color="@color/green_transparent" /> <!-- Warna hijau transparan -->
            <corners android:radius="0dp"/>
        </shape>
    </item>
</layer-list>
